{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and run Java",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "javac \"${file}\" && java ${fileBasenameNoExtension} < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
